<header class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 shadow-xl sticky top-0 z-50 backdrop-blur-lg">
  <nav class="container mx-auto flex justify-between items-center py-4 px-4 md:px-6">
    <!-- Logo / Brand -->
    <div class="flex items-center">
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <span class="text-2xl md:text-3xl font-extrabold text-white tracking-tight group-hover:scale-105 transition-transform duration-300">
          Job<span class="text-yellow-300">Nest</span>
        </span>
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-2">
      <a
        href="/about"
        class="flex items-center gap-2 py-2.5 px-5 rounded-xl transition-all duration-300 <%= currentPage === 'AboutUs' ? 'bg-white text-indigo-600 shadow-lg font-semibold' : 'text-white hover:bg-white/20' %>"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Home
      </a>

      <a
        href="/"
        class="flex items-center gap-2 py-2.5 px-5 rounded-xl transition-all duration-300 <%= currentPage === 'ViewPost' ? 'bg-white text-indigo-600 shadow-lg font-semibold' : 'text-white hover:bg-white/20' %>"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        View Posts
      </a>

      <% if (IsLoggedIn) { %>
        <% if (user && user.userType === 'Candidate') { %>
        <a
          href="/favourites"
          class="flex items-center gap-2 py-2.5 px-5 rounded-xl transition-all duration-300 <%= currentPage === 'favourites' ? 'bg-white text-indigo-600 shadow-lg font-semibold' : 'text-white hover:bg-white/20' %>"
        >
          <svg class="w-5 h-5" fill="<%= currentPage === 'favourites' ? 'currentColor' : 'none' %>" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          Favorites
        </a>
        <% } %>

        <% if (user && user.userType === 'Recruiter') { %>
        <a
          href="/host/host-posts"
          class="flex items-center gap-2 py-2.5 px-5 rounded-xl transition-all duration-300 <%= currentPage === 'host-homes' ? 'bg-white text-indigo-600 shadow-lg font-semibold' : 'text-white hover:bg-white/20' %>"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          My Posts
        </a>

        <a
          href="/host/add-post"
          class="flex items-center gap-2 py-2.5 px-5 rounded-xl transition-all duration-300 <%= currentPage === 'AddNewPost' ? 'bg-white text-indigo-600 shadow-lg font-semibold' : 'text-white hover:bg-white/20' %>"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create
        </a>

        <a
          href="/host/delete-post"
          class="flex items-center gap-2 py-2.5 px-5 rounded-xl transition-all duration-300 <%= currentPage === 'DeletePost' ? 'bg-white text-indigo-600 shadow-lg font-semibold' : 'text-white hover:bg-white/20' %>"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Manage
        </a>
        <% } %>
      <% } %>

      <!-- Auth Section -->
      <% if (!IsLoggedIn) { %>
        <a
          href="/signup"
          class="py-2.5 px-5 rounded-xl bg-white/10 text-white hover:bg-white hover:text-indigo-600 transition-all duration-300 font-semibold backdrop-blur-sm border border-white/20"
        >
          Sign Up
        </a>
        <a
          href="/login"
          class="py-2.5 px-5 rounded-xl bg-white text-indigo-600 hover:bg-yellow-300 hover:text-indigo-700 transition-all duration-300 font-semibold shadow-lg"
        >
          Login
        </a>
      <% } else { %>
        <!-- User Menu Dropdown -->
        <div class="relative ml-2">
          <button id="userMenuBtn" class="flex items-center gap-2 py-2 px-4 rounded-xl bg-white/10 hover:bg-white/20 text-white transition-all duration-300 backdrop-blur-sm border border-white/20">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-400 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
              <%= user.firstName.charAt(0).toUpperCase() %>
            </div>
            <span class="font-medium hidden xl:inline"><%= user.firstName %></span>
            <svg class="w-4 h-4 transition-transform" id="userMenuIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Dropdown -->
          <div id="userMenuDropdown" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-2xl overflow-hidden border border-gray-100">
            <div class="p-4 border-b border-gray-100 bg-gradient-to-r from-indigo-50 to-purple-50">
              <p class="font-semibold text-gray-800"><%= user.firstName %> <%= user.lastName %></p>
              <p class="text-sm text-gray-600 truncate"><%= user.email %></p>
              <span class="inline-block mt-2 px-3 py-1 bg-indigo-100 text-indigo-700 text-xs font-semibold rounded-full">
                <%= user.userType.charAt(0).toUpperCase() + user.userType.slice(1) %>
              </span>
            </div>
            <form action="/logout" method="POST" class="p-2">
              <button
                type="submit"
                class="w-full flex items-center gap-3 py-2.5 px-4 rounded-lg text-red-600 hover:bg-red-50 transition-all duration-300 font-medium"
              >
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Logout
              </button>
            </form>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobileMenuBtn" class="lg:hidden text-white p-2 hover:bg-white/20 rounded-lg transition-all duration-300">
      <svg class="w-6 h-6" id="menuIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden lg:hidden bg-gradient-to-b from-indigo-700 to-purple-700 border-t border-white/10">
    <div class="container mx-auto px-4 py-4 space-y-2">
      <a href="/about" class="flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-white/20 transition-all duration-300 <%= currentPage === 'AboutUs' ? 'bg-white/20 font-semibold' : '' %>">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Home
      </a>

      <a href="/" class="flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-white/20 transition-all duration-300 <%= currentPage === 'ViewPost' ? 'bg-white/20 font-semibold' : '' %>">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        View Posts
      </a>

      <% if (IsLoggedIn) { %>
        <% if (user && user.userType === 'candidate') { %>
        <a href="/favourites" class="flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-white/20 transition-all duration-300 <%= currentPage === 'favourites' ? 'bg-white/20 font-semibold' : '' %>">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          Favorites
        </a>
        <% } %>

        <% if (user && user.userType === 'recruiter') { %>
        <a href="/host/host-posts" class="flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-white/20 transition-all duration-300">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          My Posts
        </a>

        <a href="/host/add-post" class="flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-white/20 transition-all duration-300">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Post
        </a>

        <a href="/host/delete-post" class="flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-white/20 transition-all duration-300">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Manage Posts
        </a>
        <% } %>

        <div class="pt-3 mt-3 border-t border-white/20">
          <div class="flex items-center gap-3 px-4 py-2 text-white">
            <div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-pink-500 rounded-full flex items-center justify-center text-white font-bold">
              <%= user.firstName.charAt(0).toUpperCase() %>
            </div>
            <div class="flex-1">
              <p class="font-semibold"><%= user.firstName %> <%= user.lastName %></p>
              <p class="text-sm text-white/80 truncate"><%= user.email %></p>
            </div>
          </div>
          <form action="/logout" method="POST" class="mt-2">
            <button type="submit" class="w-full flex items-center gap-3 py-3 px-4 rounded-lg text-white hover:bg-red-500/30 transition-all duration-300 font-medium">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </button>
          </form>
        </div>
      <% } else { %>
        <div class="pt-3 mt-3 border-t border-white/20 space-y-2">
          <a href="/signup" class="block py-3 px-4 rounded-lg bg-white/10 text-white hover:bg-white/20 transition-all duration-300 text-center font-semibold">
            Sign Up
          </a>
          <a href="/login" class="block py-3 px-4 rounded-lg bg-white text-indigo-600 hover:bg-yellow-300 transition-all duration-300 text-center font-semibold">
            Login
          </a>
        </div>
      <% } %>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  const menuIcon = document.getElementById('menuIcon');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      
      if (mobileMenu.classList.contains('hidden')) {
        menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
      } else {
        menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
      }
    });
  }

  // Desktop user menu dropdown
  const userMenuBtn = document.getElementById('userMenuBtn');
  const userMenuDropdown = document.getElementById('userMenuDropdown');
  const userMenuIcon = document.getElementById('userMenuIcon');
  
  if (userMenuBtn && userMenuDropdown) {
    userMenuBtn.addEventListener('click', () => {
      userMenuDropdown.classList.toggle('hidden');
      userMenuIcon.style.transform = userMenuDropdown.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
      if (!userMenuBtn.contains(e.target) && !userMenuDropdown.contains(e.target)) {
        userMenuDropdown.classList.add('hidden');
        userMenuIcon.style.transform = 'rotate(0deg)';
      }
    });
  }
</script>