<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-blue-50 via-cyan-50 to-teal-50 min-h-screen font-sans">
    <%- include('../partials/nav') %>
    
    <div class="px-4 sm:px-6 lg:px-8 pb-16 mt-8">
      <!-- Hero Section -->
      <div class="max-w-7xl mx-auto mb-12">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-cyan-500 to-teal-600 rounded-full shadow-lg mb-4">
            <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h1 class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-cyan-600 via-blue-600 to-teal-600 mb-4 tracking-tight">
            Registered Posts
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Explore all published articles from our community
          </p>
        </div>

        <!-- Stats Bar -->
        <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border-2 border-white/20 text-center hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold text-cyan-600"><%= registeredHomes.length %></div>
            <div class="text-sm text-gray-600 font-medium mt-1">Total Posts</div>
          </div>
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border-2 border-white/20 text-center hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold text-blue-600">
              <%= new Set(registeredHomes.map(p => p.category)).size %>
            </div>
            <div class="text-sm text-gray-600 font-medium mt-1">Categories</div>
          </div>
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border-2 border-white/20 text-center hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold text-teal-600">
              <%= new Set(registeredHomes.map(p => p.authorName)).size %>
            </div>
            <div class="text-sm text-gray-600 font-medium mt-1">Authors</div>
          </div>
        </div>
      </div>

      <!-- Posts Grid -->
      <div class="max-w-7xl mx-auto">
        <% if (registeredHomes.length > 0) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% registeredHomes.forEach(home => { %>
              <div class="group bg-white/80 backdrop-blur-sm rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-white/20 hover:border-cyan-200">
                <!-- Image Container -->
                <div class="relative overflow-hidden h-56">
                  <img src="<%= home.photo %>" alt="<%= home.title %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Category Badge -->
                  <div class="absolute top-4 right-4">
                    <span class="inline-block px-4 py-2 bg-white/95 backdrop-blur-sm text-cyan-600 text-sm font-bold rounded-full shadow-lg">
                      <%= home.category %>
                    </span>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6 flex flex-col">
                  <h3 class="text-2xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-cyan-600 transition-colors duration-300">
                    <%= home.title %>
                  </h3>
                  
                  <!-- Author Info -->
                  <div class="flex items-center gap-3 mb-4 pb-4 border-b border-gray-100">
                    <div class="w-10 h-10 bg-gradient-to-br from-cyan-400 to-teal-500 rounded-full flex items-center justify-center text-white font-bold">
                      <%= home.authorName.charAt(0).toUpperCase() %>
                    </div>
                    <div class="flex-1">
                      <p class="text-sm font-semibold text-gray-800"><%= home.authorName %></p>
                      <p class="text-xs text-gray-500">
                        <%= new Date(home.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                      </p>
                    </div>
                  </div>

                  <!-- Action Buttons -->
                  <div class="flex gap-3 mt-auto">
                    <form action="/postDetails" method="GET" class="flex-1">
                      <input type="hidden" name="postId" value="<%= home._id %>">
                      <input type="hidden" name="helperValue" value="true">
                      <button class="w-full bg-gradient-to-r from-cyan-500 to-teal-600 hover:from-cyan-600 hover:to-teal-700 text-white py-3 rounded-xl font-bold transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-[1.02] flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                        <span>View Details</span>
                      </button>
                    </form>
                    
                    <% if(userType === 'reader') { %>
                      <div class="flex items-center">
                        <%- include('../partials/favourite', {home: home}) %>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <!-- Empty State -->
          <div class="max-w-2xl mx-auto text-center py-20">
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-12 shadow-lg border-2 border-white/20">
              <div class="w-24 h-24 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-800 mb-3">No Posts Yet</h3>
              <p class="text-gray-600 mb-2">There are no registered posts at the moment.</p>
              <p class="text-sm text-gray-500">Check back later for new content!</p>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Info Section -->
      <div class="max-w-3xl mx-auto mt-12">
        <div class="bg-gradient-to-r from-cyan-50 via-blue-50 to-teal-50 border-2 border-cyan-100 rounded-xl p-6 shadow-md hover:shadow-xl transition-all duration-300">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-cyan-900 mb-2">Discover Great Content</h4>
              <p class="text-sm text-cyan-700">
                Browse through our collection of articles from talented writers. Click on any post to read the full content and engage with the community.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>