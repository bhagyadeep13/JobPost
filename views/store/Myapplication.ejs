<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 min-h-screen">
  <%- include('../partials/nav') %>

  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-extrabold text-center mb-10 text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-pink-600">
      My Job Applications
    </h1>

    <% if (applications.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% applications.forEach(app => { %>
          <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-xl transition">
            <h3 class="text-xl font-bold text-gray-800 mb-2">
              <%= app.job.jobTitle %>
            </h3>

            <p class="text-gray-600 font-semibold">
              <%= app.job.companyName %>
            </p>

            <p class="text-sm text-gray-500 mt-2">
              Applied on:
              <%= new Date(app.appliedAt).toLocaleDateString('en-IN') %>
            </p>
            <div class="flex items-center justify-between">
            <span class="inline-block mt-4 px-4 py-2 bg-green-100 text-green-700 font-semibold rounded-full text-sm">
              <%= app.status %>
            </span>
            <form action="/postDetails" method="GET">
            <input type="hidden" name="postId" value="<%= app.job._id %>">
            <button
            class="mt-4 w-12 px-2 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition"
            >View</button>
            </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center text-gray-600 mt-20">
        <h3 class="text-2xl font-bold">No applications yet</h3>
        <p class="mt-2">Start applying for jobs today!</p>
      </div>
    <% } %>
  </div>

</body>
</html>
