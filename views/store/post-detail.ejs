<%- include('../partials/head') %>
    </head>

    <body class="bg-gradient-to-br from-blue-50 via-cyan-50 to-teal-50 min-h-screen font-sans">
        <%- include('../partials/nav') %>
        <%- include('../partials/toast') %>
            <main class="container mx-auto px-4 py-8 max-w-6xl">
                <!-- Job Header -->
                <article
                    class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-Black/20">
                    <!-- Featured Image -->
                    <div class="relative h-96 md:h-[500px] overflow-hidden">
                        <img src="<%= home.photo %>" alt="<%= home.jobTitle %>"
                            class="w-full h-full object-cover transition-transform duration-500 hover:scale-105">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>


                        <!-- Job Title Overlay -->
                        <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
                            <h1
                                class="text-4xl md:text-5xl lg:text-4xl font-extrabold text-Black-600 mb-4 drop-shadow-2xl leading-tight">
                                <%= home.jobTitle %>
                            </h1>
                        </div>
                    </div>

                    <!-- Content Section -->
                    <div class="p-8 md:p-12">
                        <!-- Company & Meta Info -->
                        <div
                            class="flex flex-wrap items-center justify-between gap-6 pb-8 mb-8 border-b-2 border-gray-100">
                            <!-- Company Info -->
                            <div class="flex items-center gap-4">
                                <div
                                    class="w-14 h-14 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-full flex items-center justify-center text-white font-bold text-xl shadow-lg transform hover:scale-110 transition-transform duration-300">
                                    <%= home.companyName.charAt(0).toUpperCase() %>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 font-medium">Posted by </p>
                                    <p class="text-xl font-bold text-gray-900">
                                        <%= home.companyName %>
                                    </p>
                                </div>
                            </div>

                            <!-- Date & Favorite -->
                            <div class="flex items-center gap-6">
                                <div class="flex items-center gap-2 text-gray-600 bg-gray-50 px-4 py-2 rounded-xl">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span class="font-medium">
                                        <%= new Date(home.createdAt).toLocaleDateString('en-US', { year: 'numeric' ,
                                            month: 'long' , day: 'numeric' }) %>
                                    </span>
                                </div>

                                <% if(userType==='Candidate' ) { %>
                                    <div>
                                        <form action="/apply" method="POST">
                                            <input type="hidden" name="postId" value="<%= home._id %>">
                                            <button
                                                class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white py-3 px-3 rounded-xl font-semibold shadow-md hover:shadow-xl transition">
                                                Apply Now
                                            </button>
                                        </form>

                                    </div>
                                    <% } %>
                            </div>
                        </div>

                        <!-- Stats Bar -->
                        <div class="flex flex-wrap gap-4 mb-8">
                            <% if(home.salary) { %>
                                <div
                                    class="flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-cyan-50 to-blue-50 rounded-xl border-2 border-cyan-100 hover:border-cyan-200 transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-105">
                                    <svg class="w-5 h-5 text-cyan-600" fill="none" viewBox="0 0 24 24"
                                        stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="text-sm font-bold text-gray-800">
                                        Salary: <%= home.salary %>
                                    </span>
                                </div>
                                <% } %>
                        </div>

                        <!-- Job Description -->
                        <div class="prose prose-lg max-w-none">
                            <div class="flex items-center mb-4">
                                <h2 class="text-2xl font-extrabold text-gray-900 mb-4">
                                    Job Description
                                </h2>
                            </div>
                            <div class="text-gray-700 leading-relaxed text-lg space-y-6">
                                <%- home.jobDescription.split('\n').map(paragraph=>
                                    paragraph.trim() ? `<p class="mb-4">${paragraph}</p>` : ''
                                    ).join('') %>
                            </div>
                        </div>

                        <div class="mt-10">
                            <h2 class="text-2xl font-extrabold text-gray-900 mb-4">
                                Location
                            </h2>
                            <h2>
                                <%= home.location %>
                            </h2>
                        </div>

                        <!-- Share Section -->
                        <div class="mt-8 pt-8 border-t-2 border-gray-100">
                            <div class="flex flex-wrap items-center justify-between gap-6">
                                <div>
                                    <p class="text-sm font-semibold text-gray-600 mb-3">Share this job:</p>
                                    <div class="flex gap-3">
                                        <a type="button" href="https://in.search.yahoo.com/yhs/search?hspart=ima&hsimp=yhs-remarklist2&type=chrome-q1000331_6002q&p=whatsapp+web"
                                            class="flex items-center gap-2 px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white rounded-xl transition-all duration-300 shadow-md hover:shadow-lg text-sm font-bold transform hover:scale-105">
                                            Whatsapp
                                    </a>
                                    </div>
                                </div>
                                <a href="/"
                                    class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-xl transition-all duration-300 shadow-md hover:shadow-lg text-sm font-bold transform hover:scale-105">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                    </svg>
                                    Back to Jobs
                                </a>
                            </div>
                        </div>
                    </div>
                </article>
            </main>
    </body>

    </html>