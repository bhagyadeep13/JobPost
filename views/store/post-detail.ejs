<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-50 via-cyan-50 to-teal-50 min-h-screen font-sans">
    <%- include('../partials/nav') %>

    <main class="container mx-auto px-4 py-8 max-w-6xl">
        <!-- Job Header -->
        <article class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-Black/20">
            <!-- Featured Image -->
            <div class="relative h-96 md:h-[500px] overflow-hidden">
                <img src="<%= home.photo %>" alt="<%= home.jobTitle %>" class="w-full h-full object-cover transition-transform duration-500 hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                
                <!-- Location Badge -->
                <div class="absolute top-6 right-6 animate-fade-in">
                    <span class="inline-block px-6 py-2 bg-Black/95 backdrop-blur-sm text-cyan-600 text-sm font-bold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <%= home.location %>
                    </span>
                </div>
                
                <!-- Job Title Overlay -->
                <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
                    <h1 class="text-4xl md:text-5xl lg:text-4xl font-extrabold text-Black-600 mb-4 drop-shadow-2xl leading-tight">
                        <%= home.jobTitle %>
                    </h1>
                </div>
            </div>

            <!-- Content Section -->
            <div class="p-8 md:p-12">
                <!-- Company & Meta Info -->
                <div class="flex flex-wrap items-center justify-between gap-6 pb-8 mb-8 border-b-2 border-gray-100">
                    <!-- Company Info -->
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-bold text-xl shadow-lg transform hover:scale-110 transition-transform duration-300">
                            <%= home.companyName.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Posted by</p>
                            <p class="text-xl font-bold text-gray-900"><%= home.companyName %></p>
                        </div>
                    </div>

                    <!-- Date & Favorite -->
                    <div class="flex items-center gap-6">
                        <div class="flex items-center gap-2 text-gray-600 bg-gray-50 px-4 py-2 rounded-xl">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span class="font-medium">
                                <%= new Date(home.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                            </span>
                        </div>

                        <% if(userType === 'reader') { %>
                        <div>
                            <%- include('../partials/favourite') %>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Stats Bar -->
                <div class="flex flex-wrap gap-4 mb-8">
                    <% if(home.salary) { %>
                    <div class="flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-cyan-50 to-blue-50 rounded-xl border-2 border-cyan-100 hover:border-cyan-200 transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-105">
                        <svg class="w-5 h-5 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-sm font-bold text-gray-800">
                            Salary: <%= home.salary %>
                        </span>
                    </div>
                    <% } %>
                    <div class="flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-teal-50 to-emerald-50 rounded-xl border-2 border-teal-100 hover:border-teal-200 transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-105">
                        <svg class="w-5 h-5 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span class="text-sm font-bold text-gray-800">
                            <%= home.jobDescription.split(' ').length %> words
                        </span>
                    </div>
                </div>

                <!-- Job Description -->
                <div class="prose prose-lg max-w-none">
                    <div class="text-gray-700 leading-relaxed text-lg space-y-6">
                        <%- home.jobDescription.split('\n').map(paragraph => 
                            paragraph.trim() ? `<p class="mb-4">${paragraph}</p>` : ''
                        ).join('') %>
                    </div>
                </div>

                <!-- Job Category -->
                <div class="mt-12 pt-8 border-t-2 border-gray-100">
                    <div class="flex flex-wrap items-center gap-3">
                        <span class="text-sm font-semibold text-gray-600">Category:</span>
                        <span class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-full text-sm font-bold shadow-md hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                            <%= home.category %>
                        </span>
                    </div>
                </div>

                <!-- Share Section -->
                <div class="mt-8 pt-8 border-t-2 border-gray-100">
                    <div class="flex flex-wrap items-center justify-between gap-6">
                        <div>
                            <p class="text-sm font-semibold text-gray-600 mb-3">Share this job:</p>
                            <div class="flex gap-3">
                                <button class="flex items-center gap-2 px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white rounded-xl transition-all duration-300 shadow-md hover:shadow-lg text-sm font-bold transform hover:scale-105">
                                    Share
                                </button>
                                <button class="flex items-center gap-2 px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white rounded-xl transition-all duration-300 shadow-md hover:shadow-lg text-sm font-bold transform hover:scale-105">
                                    Tweet
                                </button>
                            </div>
                        </div>
                        <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-xl transition-all duration-300 shadow-md hover:shadow-lg text-sm font-bold transform hover:scale-105">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            Back to Jobs
                        </a>
                    </div>
                </div>
            </div>
        </article>
    </main>
</body>
</html>
