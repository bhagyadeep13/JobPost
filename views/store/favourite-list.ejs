<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-blue-50 via-cyan-50 to-teal-50 min-h-screen font-sans">
    <%- include('../partials/nav') %>
    <%- include('../partials/toast') %>
    
    <div class="px-4 sm:px-6 lg:px-8 pb-16 mt-8">
      <!-- Hero Section -->
      <div class="max-w-7xl mx-auto mb-12">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-pink-500 to-rose-600 rounded-full shadow-lg mb-4">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
          </div>
          <h1 class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-600 via-rose-600 to-red-600 mb-4 tracking-tight">
            Your Favourites
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Your personally curated collection of amazing articles
          </p>
        </div>

        <!-- Stats Bar -->
        <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border-2 border-white/20 text-center hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold text-pink-600"><%= favouritePosts.length %></div>
            <div class="text-sm text-gray-600 font-medium mt-1">Saved Posts</div>
          </div>
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border-2 border-white/20 text-center hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold text-rose-600">
              <%= new Set(favouritePosts.map(p => p.category)).size %>
            </div>
            <div class="text-sm text-gray-600 font-medium mt-1">Categories</div>
          </div>
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border-2 border-white/20 text-center hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-3xl font-bold text-red-600">
              <%= new Set(favouritePosts.map(p => p.authorName)).size %>
            </div>
            <div class="text-sm text-gray-600 font-medium mt-1">Authors</div>
          </div>
        </div>
      </div>

      <!-- Posts Grid -->
      <div class="max-w-7xl mx-auto">
        <% if (favouritePosts.length > 0) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% favouritePosts.forEach(post => { %>
              <div class="group bg-white/80 backdrop-blur-sm rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-white/20 hover:border-pink-200">
                <!-- Image Container -->
                <div class="relative overflow-hidden h-56">
                  <img src="<%= post.photo %>" alt="<%= post.title %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Category Badge -->
                  <div class="absolute top-4 right-4">
                    <span class="inline-block px-4 py-2 bg-white/95 backdrop-blur-sm text-pink-600 text-sm font-bold rounded-full shadow-lg">
                      <%= post.category %>
                    </span>
                  </div>

                  <!-- Favourite Badge -->
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center gap-1 px-3 py-1.5 bg-pink-500/95 backdrop-blur-sm text-white text-xs font-bold rounded-full shadow-lg">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                      </svg>
                      Saved
                    </span>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6 flex flex-col">
                  <h3 class="text-2xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-pink-600 transition-colors duration-300">
                    <%= post.title %>
                  </h3>
                  
                  <!-- Author Info -->
                  <div class="flex items-center gap-3 mb-4 pb-4 border-b border-gray-100">
                    <div class="w-10 h-10 bg-gradient-to-br from-pink-400 to-rose-500 rounded-full flex items-center justify-center text-white font-bold">
                      <%= post.authorName.charAt(0).toUpperCase() %>
                    </div>
                    <div class="flex-1">
                      <p class="text-sm font-semibold text-gray-800"><%= post.authorName %></p>
                      <p class="text-xs text-gray-500">
                        <%= new Date(post.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                      </p>
                    </div>
                  </div>

                  <!-- Action Buttons -->
                  <div class="flex gap-3 mt-auto">
                    <a href="/postDetails?postId=<%= post._id %>" class="flex items-center justify-center px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg">
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </a>
                    <form action="/favourites/delete/<%= post._id %>" method="POST" class="flex-1" onsubmit="return confirm('Remove this post from your favourites?');">
                      <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white py-3 rounded-xl font-bold transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-[1.02] flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        <span>Remove</span>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <!-- Empty State -->
          <div class="max-w-2xl mx-auto text-center py-20">
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-12 shadow-lg border-2 border-white/20">
              <div class="w-24 h-24 bg-gradient-to-br from-pink-100 to-rose-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-pink-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-800 mb-3">No Favourites Yet</h3>
              <p class="text-gray-600 mb-6">Start building your collection by saving posts you love!</p>
              <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-pink-500 to-rose-600 hover:from-pink-600 hover:to-rose-700 text-white rounded-xl font-bold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                Explore Posts
              </a>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Info Section -->
      <div class="max-w-3xl mx-auto mt-12">
        <div class="bg-gradient-to-r from-pink-50 via-rose-50 to-red-50 border-2 border-pink-100 rounded-xl p-6 shadow-md hover:shadow-xl transition-all duration-300">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-pink-900 mb-2">Quick Tip</h4>
              <p class="text-sm text-pink-700">
                Save articles to read later or build your personal library. You can remove posts anytime by clicking the Remove button.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>