<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <%- include('../partials/toast') %>

  <!-- Preloader -->
  <div id="preloader" class="fixed inset-0 bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 flex flex-col items-center justify-center z-50 transition-opacity duration-500">
    <div class="relative">
      <div class="w-24 h-24 border-8 border-indigo-400 border-t-transparent rounded-full animate-spin"></div>
    </div>
    <p class="mt-6 text-lg font-semibold text-indigo-600">Loading jobs...</p>
  </div>

  <div class="mt-10 px-4 sm:px-6 lg:px-8 pb-16">
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto text-center mb-16">
      <h1 class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 mb-4">
        Available Jobs
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Explore the latest job opportunities from top companies
      </p>
      <div class="mt-6 h-1 w-32 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <!-- Jobs Grid -->
    <% if (jobs && jobs.length > 0) { %>
      <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% jobs.forEach(job => { %>
          <div class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
            
            <!-- Image -->
            <div class="relative overflow-hidden h-56">
              <img src="<%= job.photo || '/images/default-job.jpg' %>" alt="<%= job.jobTitle %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
              
              <!-- Location Badge -->
              <div class="absolute top-4 right-4">
                <span class="px-4 py-2 bg-white/95 text-indigo-600 text-sm font-bold rounded-full shadow-lg">
                  <%= job.location %>
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="p-6 flex flex-col">
              <h3 class="text-2xl font-bold text-gray-900 line-clamp-2 group-hover:text-indigo-600 transition-colors">
                <%= job.jobTitle %>
              </h3>

              <p class="text-sm text-gray-600 font-semibold mt-1">
                <%= job.companyName %>
              </p>

              <div class="flex items-center justify-between">
              <p class="text-gray-700 line-clamp-3 mt-2">
                <%= job.jobDescription %>
              </p>

              <% if (job.salary) { %>
                <p class="text-green-600 font-semibold mt-2">
                  Salary: <%= job.salary %>
                </p>
              <% } %>
              </div>
              <!-- Company Avatar & Date -->
              <div class="flex items-center gap-3 mt-4">
                <div class="w-10 h-10 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full flex items-center justify-center text-white font-bold">
                  <%= job.companyName ? job.companyName.charAt(0).toUpperCase() : 'C' %>
                </div>
                <div>
                  <p class="text-sm font-semibold text-gray-800"><%= job.companyName %></p>
                  <p class="text-xs text-gray-500">
                    <%= new Date(job.createdAt).toLocaleDateString('en-IN', { year:'numeric', month:'short', day:'numeric'}) %>
                  </p>
                </div>
              </div>

              <!-- CTA Button -->
              <form action="/jobDetails" method="GET" class="mt-4">
                <input type="hidden" name="jobId" value="<%= job._id %>">
                <div class="flex items-center justify-between">
                <a type="button" href="/postDetails?postId=<%= job._id %>" class="flex items-center justify-center py-2 px-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg">
                    View Post
                  </a>
                <div class="flex gap-3 mt-auto">
                  <a href="/host/edit-post/<%=job._id%>?editing=true" class="flex-1 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 text-white py-2 px-2 rounded-lg text-center font-semibold transition">Edit Post</a>
                </div>
                </div>
              </form>

            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="max-w-2xl mx-auto text-center py-20">
        <h3 class="text-3xl font-bold text-gray-800 mb-3">No Jobs Posted Yet</h3>
        <p class="text-gray-600 mb-8">Check back later for new opportunities.</p>
      </div>
    <% } %>
  </div>

  <!-- Preloader Script -->
  <script>
    window.addEventListener('load', () => {
      const preloader = document.getElementById('preloader');
      preloader.style.opacity = '0';
      setTimeout(() => preloader.style.display = 'none', 500);
    });
  </script>

</body>
</html>
