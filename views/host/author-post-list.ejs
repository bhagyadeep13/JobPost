<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 min-h-screen font-sans">
    <%- include('../partials/nav') %>
    <%- include('../partials/toast') %>

    <div class="px-4 sm:px-6 lg:px-8 pb-16 mt-8">
      <!-- Hero Section -->
      <div class="max-w-7xl mx-auto mb-12">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full shadow-lg mb-4">
            <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          <h1 class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 mb-4 tracking-tight">
            Your Creative Space
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Manage and edit your published articles
          </p>
        </div>

        <!-- Stats Bar -->
        <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border border-white/20 text-center">
            <div class="text-3xl font-bold text-indigo-600"><%= registeredPosts.length %></div>
            <div class="text-sm text-gray-600 font-medium mt-1">Total Posts</div>
          </div>
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border border-white/20 text-center">
            <div class="text-3xl font-bold text-purple-600">
              <%= registeredPosts.reduce((sum, post) => {
                const categories = new Set(registeredPosts.map(p => p.category));
                return categories.size;
              }, 0) %>
            </div>
            <div class="text-sm text-gray-600 font-medium mt-1">Categories</div>
          </div>
          <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border border-white/20 text-center">
            <div class="text-3xl font-bold text-pink-600">
              <%= registeredPosts.length > 0 ? new Date(Math.max(...registeredPosts.map(p => new Date(p.createdAt)))).toLocaleDateString('en-IN', { month: 'short', day: 'numeric' }) : 'N/A' %>
            </div>
            <div class="text-sm text-gray-600 font-medium mt-1">Last Published</div>
          </div>
        </div>

        <!-- Create New Post Button -->
        <div class="text-center">
          <a href="/host/add-post" class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 hover:from-indigo-600 hover:via-purple-600 hover:to-pink-600 text-white px-8 py-3.5 rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-300">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Create New Post</span>
          </a>
        </div>
      </div>

      <!-- Posts Grid -->
      <div class="max-w-7xl mx-auto">
        <% if (registeredPosts.length > 0) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% registeredPosts.forEach(post => { %>
              <div class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
                <!-- Image Container with Overlay -->
                <div class="relative overflow-hidden h-56">
                  <img src="<%= post.photo %>" alt="<%= post.title %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Category Badge -->
                  <div class="absolute top-4 right-4">
                    <span class="inline-block px-4 py-2 bg-white/95 backdrop-blur-sm text-indigo-600 text-sm font-bold rounded-full shadow-lg">
                      <%= post.category %>
                    </span>
                  </div>

                  <!-- Status Badge -->
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center gap-1 px-3 py-1.5 bg-green-500/95 backdrop-blur-sm text-white text-xs font-bold rounded-full shadow-lg">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      Published
                    </span>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6 flex flex-col">
                  <h3 class="text-2xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-indigo-600 transition-colors duration-300">
                    <%= post.title %>
                  </h3>
                  
                  <!-- Author Info -->
                  <div class="flex items-center gap-3 mb-4 pb-4 border-b border-gray-100">
                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full flex items-center justify-center text-white font-bold">
                      <%= post.authorName.charAt(0).toUpperCase() %>
                    </div>
                    <div class="flex-1">
                      <p class="text-sm font-semibold text-gray-800"><%= post.authorName %></p>
                      <p class="text-xs text-gray-500">
                        <%= new Date(post.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                      </p>
                    </div>
                  </div>

                  <!-- Action Buttons -->
                  <div class="flex gap-3 mt-auto">
                    <a href="/host/edit-post/<%=post._id%>?editing=true" class="flex-1 bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 text-white py-3 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-[1.02] flex items-center justify-center gap-2">
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                      <span>Edit</span>
                    </a>
                    <a href="/postDetails?postId=<%= post._id %>" class="flex items-center justify-center px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg">
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <!-- Empty State -->
          <div class="max-w-2xl mx-auto text-center py-20">
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-12 shadow-lg border border-white/20">
              <div class="w-24 h-24 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-800 mb-3">No Posts Yet</h3>
              <p class="text-gray-600 mb-8">Start your writing journey by creating your first post!</p>
              <a href="/host/add-post" class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 hover:from-indigo-600 hover:via-purple-600 hover:to-pink-600 text-white px-8 py-3.5 rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-300">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span>Create Your First Post</span>
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>