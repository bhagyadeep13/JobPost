<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <%- include('../partials/toast') %>

  <div class="px-4 sm:px-6 lg:px-8 pb-16 mt-8">
    <!-- Warning Hero Section -->
    <div class="max-w-7xl mx-auto mb-12">
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-red-500 to-pink-600 rounded-full shadow-lg mb-4 animate-pulse">
          <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </div>
        <h1 class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-red-600 via-pink-600 to-purple-600 mb-4 tracking-tight">
          Content Management
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Review and manage your published content
        </p>

        <!-- Warning Banner -->
        <div class="max-w-3xl mx-auto mt-6 bg-red-50 border-2 border-red-200 rounded-xl p-4 flex items-start gap-3">
          <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div class="text-left">
            <p class="font-semibold text-red-800 mb-1">⚠️ Caution: Permanent Action</p>
            <p class="text-sm text-red-700">Deleted jobs cannot be recovered. Please review carefully before removing content.</p>
          </div>
        </div>
      </div>

      <!-- Stats Bar -->
      <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border border-white/20 text-center">
          <div class="text-3xl font-bold text-red-600"><%= registeredPosts.length %></div>
          <div class="text-sm text-gray-600 font-medium mt-1">Jobs to Review</div>
        </div>
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border border-white/20 text-center">
          <div class="text-3xl font-bold text-pink-600">
            <%= new Set(registeredPosts.map(p => p.category)).size %>
          </div>
          <div class="text-sm text-gray-600 font-medium mt-1">Categories</div>
        </div>
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-md border border-white/20 text-center">
          <div class="text-3xl font-bold text-purple-600">
            <%= new Set(registeredPosts.map(p => p.companyName)).size %>
          </div>
          <div class="text-sm text-gray-600 font-medium mt-1">Companies</div>
        </div>
      </div>
    </div>

    <!-- Jobs Grid -->
    <div class="max-w-7xl mx-auto">
      <% if (registeredPosts.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% registeredPosts.forEach(post => { %>
            <div class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-transparent hover:border-red-200">
              <!-- Image Container with Overlay -->
              <div class="relative overflow-hidden h-56">
                <img src="<%= post.photo %>" alt="<%= post.jobTitle %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

                <!-- Category Badge -->
                <div class="absolute top-4 right-4">
                  <span class="inline-block px-4 py-2 bg-white/95 backdrop-blur-sm text-indigo-600 text-sm font-bold rounded-full shadow-lg">
                    <%= post.category %>
                  </span>
                </div>

                <!-- Warning Indicator -->
                <div class="absolute top-4 left-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <span class="inline-flex items-center gap-1 px-3 py-1.5 bg-red-500/95 backdrop-blur-sm text-white text-xs font-bold rounded-full shadow-lg">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    Review
                  </span>
                </div>
              </div>

              <!-- Content -->
              <div class="p-6 flex flex-col">
                <h3 class="text-2xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-red-600 transition-colors duration-300">
                  <%= post.jobTitle %>
                </h3>

                <!-- Company Info -->
                <div class="flex items-center gap-3 mb-4 pb-4 border-b border-gray-100">
                  <div class="w-10 h-10 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full flex items-center justify-center text-white font-bold">
                    <%= post.companyName.charAt(0).toUpperCase() %>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-semibold text-gray-800"><%= post.companyName %></p>
                    <p class="text-xs text-gray-500">
                      <%= new Date(post.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                    </p>
                  </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 mt-auto">
                  <a href="/postDetails?postId=<%= post._id %>" class="flex items-center justify-center px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </a>
                  <form action="/host/delete-post" method="POST" class="flex-1" onsubmit="return confirm('⚠️ Are you sure you want to permanently delete this job?\\n\\nThis action cannot be undone.');">
                    <input type="hidden" name="postId" value="<%= post._id %>">
                    <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white py-3 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-[1.02] flex items-center justify-center gap-2">
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      <span>Delete</span>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="max-w-2xl mx-auto text-center py-20">
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-12 shadow-lg border border-white/20">
            <div class="w-24 h-24 bg-gradient-to-br from-green-100 to-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-12 h-12 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-gray-800 mb-3">All Clear!</h3>
            <p class="text-gray-600 mb-2">No jobs require review at this time.</p>
            <p class="text-sm text-gray-500">All content is properly managed.</p>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Bottom Help Section -->
    <div class="max-w-3xl mx-auto mt-12">
      <div class="bg-indigo-50 border border-indigo-200 rounded-xl p-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-indigo-900 mb-2">Need Help?</h4>
            <p class="text-sm text-indigo-700">
              Before deleting content, consider archiving or editing jobs instead. Deleted jobs cannot be recovered. 
              For assistance, contact the support team.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
